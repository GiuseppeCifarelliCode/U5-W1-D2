@model IEnumerable<AziendaEdile.Models.Dipendente>
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-hover">
    <tr>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Lavoro</th>
    </tr>
    @foreach(AziendaEdile.Models.Dipendente dipendente in Model)
            {
                <tr>
                    <td>@dipendente.Name</td>
                    <td>@dipendente.Surname</td>
                    <td>@dipendente.Job</td>
                    <td>@Html.ActionLink("Aggiungi Pagamento", "AddPayment", "Home", new { id = dipendente.Id}, new { @class = "btn btn-success" })</td>
                    <td>@Html.ActionLink("Mostra Pagamenti", "ShowPayment", "Home", new { id = dipendente.Id }, new { @class = "btn btn-info" })</td>
                </tr>
            }
</table>

